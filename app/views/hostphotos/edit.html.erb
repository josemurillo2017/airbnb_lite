<!-- Validation failure messages -->
<% if @hostphoto.errors.any? %>
  <% @hostphoto.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Hostphoto #<%= @hostphoto.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_hostphoto/<%= @hostphoto.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for photo_id -->
      <div class="form-group">
        <label for="photo_id" class="control-label">
          Photo
        </label>

        <input type="text" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value="<%= @hostphoto.photo_id %>">
      </div>

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @hostphoto.listing_id %>">
      </div>

      <button class="btn btn-warning">
        Update Hostphoto
      </button>
      or
      <a href="/hostphotos/<%= @hostphoto.id %>">Cancel</a>
    </form>
  </div>
</div>
