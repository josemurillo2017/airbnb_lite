<!-- Validation failure messages -->
<% if @hostphoto.errors.any? %>
  <% @hostphoto.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Hostphoto #<%= @hostphoto.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_hostphoto/<%= @hostphoto.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for photo_id -->
      <div class="form-group">
        <label for="photo_id" class="control-label">
          Photo
        </label>

        <%= select_tag(:photo_id, options_from_collection_for_select(Photo.all, :id, :created_at, @hostphoto.photo_id), :class => "form-control") %>
      </div>

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <%= select_tag(:listing_id, options_from_collection_for_select(Listing.all, :id, :title, @hostphoto.listing_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Hostphoto
      </button>
      or
      <a href="/hostphotos/<%= @hostphoto.id %>">Cancel</a>
    </form>
  </div>
</div>
