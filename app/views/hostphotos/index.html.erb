<div class="page-header">
  <h1>
    Hostphotos
    <a href="/hostphotos/new" class="btn btn-lg btn-success">New Hostphoto</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo</th>
        <th>Listing</th>
        <th>Actions</th>
      </tr>

      <% @hostphotos.each do |hostphoto| %>
      <tr>
        <td>
          <% if hostphoto.photo.present? %>
            <a href="/photos/<%= hostphoto.photo.id %>">
              <%= hostphoto.photo.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if hostphoto.listing.present? %>
            <a href="/listings/<%= hostphoto.listing.id %>">
              <%= hostphoto.listing.title %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/hostphotos/<%= hostphoto.id %>" class="btn btn-primary">Show</a>
          <a href="/hostphotos/<%= hostphoto.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_hostphoto/<%= hostphoto.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @hostphotos, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
