<div class="page-header">
  <h3>Availibiliity #<%= @availibiliity.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Listing</dt>
      <dd>
        <% if @availibiliity.listing.present? %>
          <a href="/listings/<%= @availibiliity.listing_id %>">
            <%= @availibiliity.listing.title %>
          </a>
        <% end %>
      </dd>

      <dt>Date</dt>
      <dd><%= @availibiliity.date %></dd>

      <dt>Price</dt>
      <dd><%= @availibiliity.price %></dd>

      <dt>Is available</dt>
      <dd><%= @availibiliity.is_available %></dd>

      <dt>Message</dt>
      <dd><%= @availibiliity.message %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/availibiliities" class="btn btn-primary">
        Back
      </a>
      <a href="/availibiliities/<%= @availibiliity.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_availibiliity/<%= @availibiliity.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
