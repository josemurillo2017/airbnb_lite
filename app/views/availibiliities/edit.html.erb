<!-- Validation failure messages -->
<% if @availibiliity.errors.any? %>
  <% @availibiliity.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Availibiliity #<%= @availibiliity.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_availibiliity/<%= @availibiliity.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @availibiliity.listing_id %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @availibiliity.date %>">
      </div>

      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Price
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= @availibiliity.price %>">
      </div>

      <!-- Label and input for is_available -->
      <div class="checkbox">
        <label for="is_available">
          <input type="checkbox" id="is_available" name="is_available" value="1" <%= "checked" if @availibiliity.is_available %>>
          Is available
        </label>
      </div>

      <!-- Label and input for message -->
      <div class="form-group">
        <label for="message" class="control-label">
          Message
        </label>

        <input type="text" id="message" name="message" placeholder="Message" class="form-control" value="<%= @availibiliity.message %>">
      </div>

      <button class="btn btn-warning">
        Update Availibiliity
      </button>
      or
      <a href="/availibiliities/<%= @availibiliity.id %>">Cancel</a>
    </form>
  </div>
</div>
