<div class="page-header">
  <h3>Request #<%= @request.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Guest</dt>
      <dd>
        <% if @request.guest.present? %>
          <a href="/guests/<%= @request.guest_id %>">
            <%= @request.guest.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Listing</dt>
      <dd>
        <% if @request.listing.present? %>
          <a href="/listings/<%= @request.listing_id %>">
            <%= @request.listing.title %>
          </a>
        <% end %>
      </dd>

      <dt>Date</dt>
      <dd><%= @request.date %></dd>

      <dt>Request accepted</dt>
      <dd><%= @request.request_accepted %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/requests" class="btn btn-primary">
        Back
      </a>
      <a href="/requests/<%= @request.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_request/<%= @request.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
