<!-- Validation failure messages -->
<% if @hostpolicy.errors.any? %>
  <% @hostpolicy.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Hostpolicy</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_hostpolicy" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @hostpolicy.listing_id %>">
      </div>

      <!-- Label and input for policy_id -->
      <div class="form-group">
        <label for="policy_id" class="control-label">
          Policy
        </label>

        <input type="text" id="policy_id" name="policy_id" placeholder="Policy" class="form-control" value="<%= @hostpolicy.policy_id %>">
      </div>

      <button class="btn btn-success">
        Create Hostpolicy
      </button>
      or
      <a href="/hostpolicies">Cancel</a>
    </form>
  </div>
</div>
