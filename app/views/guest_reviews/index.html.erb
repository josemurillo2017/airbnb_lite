<div class="page-header">
  <h1>
    Guest reviews
    <a href="/guest_reviews/new" class="btn btn-lg btn-success">New Guest review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Guest</th>
        <th>Overall rating</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @guest_reviews.each do |guest_review| %>
      <tr>
        <td>
          <% if guest_review.guest.present? %>
            <a href="/guests/<%= guest_review.guest.id %>">
              <%= guest_review.guest.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= guest_review.overall_rating %></td>
        <td><%= guest_review.body %></td>
        <td>
          <a href="/guest_reviews/<%= guest_review.id %>" class="btn btn-primary">Show</a>
          <a href="/guest_reviews/<%= guest_review.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_guest_review/<%= guest_review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @guest_reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
