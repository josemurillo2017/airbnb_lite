<div class="page-header">
  <h3>Guest Review #<%= @guest_review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Guest</dt>
      <dd>
        <% if @guest_review.guest.present? %>
          <a href="/guests/<%= @guest_review.guest_id %>">
            <%= @guest_review.guest.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Overall rating</dt>
      <dd><%= @guest_review.overall_rating %></dd>

      <dt>Body</dt>
      <dd><%= @guest_review.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/guest_reviews" class="btn btn-primary">
        Back
      </a>
      <a href="/guest_reviews/<%= @guest_review.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_guest_review/<%= @guest_review.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
