<div class="page-header">
  <h3>Message #<%= @message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Host</dt>
      <dd>
        <% if @message.host.present? %>
          <a href="/hosts/<%= @message.host_id %>">
            <%= @message.host.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Guest</dt>
      <dd>
        <% if @message.guest.present? %>
          <a href="/guests/<%= @message.guest_id %>">
            <%= @message.guest.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>From host</dt>
      <dd><%= @message.from_host %></dd>

      <dt>Message</dt>
      <dd><%= @message.message %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
