<div class="page-header">
  <h3>Host #<%= @host.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @host.email %></dd>

      <dt>Password</dt>
      <dd><%= @host.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/hosts" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Host has many messages -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Messages
      </li>

      <% @host.messages.each do |message| %>
        <li class="list-group-item">
          <a href="/messages/<%= message.id %>">
            <%= message.host_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/messages/<%= message.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/messages/<%= message.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Host has many hostlistings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Hostlistings
      </li>

      <% @host.hostlistings.each do |hostlisting| %>
        <li class="list-group-item">
          <a href="/hostlistings/<%= hostlisting.id %>">
            <%= hostlisting.host_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/hostlistings/<%= hostlisting.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/hostlistings/<%= hostlisting.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_hostlisting/<%= hostlisting.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Host has many host_as_guests -->

