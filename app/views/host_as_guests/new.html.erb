<!-- Validation failure messages -->
<% if @host_as_guest.errors.any? %>
  <% @host_as_guest.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Host As Guest</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_host_as_guest" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for host_id -->
      <div class="form-group">
        <label for="host_id" class="control-label">
          Host
        </label>

        <input type="text" id="host_id" name="host_id" placeholder="Host" class="form-control" value="<%= @host_as_guest.host_id %>">
      </div>

      <!-- Label and input for guest_id -->
      <div class="form-group">
        <label for="guest_id" class="control-label">
          Guest
        </label>

        <input type="text" id="guest_id" name="guest_id" placeholder="Guest" class="form-control" value="<%= @host_as_guest.guest_id %>">
      </div>

      <button class="btn btn-success">
        Create Host As Guest
      </button>
      or
      <a href="/host_as_guests">Cancel</a>
    </form>
  </div>
</div>
