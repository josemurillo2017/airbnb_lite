<div class="page-header">
  <h1>
    Listings
    <a href="/listings/new" class="btn btn-lg btn-success">New Listing</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "listings_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

<div class="form-group">
  <%= f.label :default_price_per_night, "Default price per night" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :default_price_per_night_gteq, :class => "form-control", :placeholder => "Default price per night greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :default_price_per_night_lteq, :class => "form-control", :placeholder => "Default price per night less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :neighborhood_cont, "Neighborhood contains" %>
    <%= f.text_field :neighborhood_cont, :class => "form-control", :placeholder => "Neighborhood contains" %>
  </div>

<div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

<div class="form-group">
  <%= f.label :max_occupancy, "Max occupancy" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :max_occupancy_gteq, :class => "form-control", :placeholder => "Max occupancy greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :max_occupancy_lteq, :class => "form-control", :placeholder => "Max occupancy less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :no_of_beds, "No of beds" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :no_of_beds_gteq, :class => "form-control", :placeholder => "No of beds greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :no_of_beds_lteq, :class => "form-control", :placeholder => "No of beds less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :no_of_bathrooms, "No of bathrooms" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :no_of_bathrooms_gteq, :class => "form-control", :placeholder => "No of bathrooms greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :no_of_bathrooms_lteq, :class => "form-control", :placeholder => "No of bathrooms less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :no_of_bedrooms, "No of bedrooms" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :no_of_bedrooms_gteq, :class => "form-control", :placeholder => "No of bedrooms greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :no_of_bedrooms_lteq, :class => "form-control", :placeholder => "No of bedrooms less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
    <%= f.label :entire_home_eq, "Entire home" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :entire_home_eq, "1", checked: ((params[:q] && params[:q][:entire_home_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :entire_home_eq, "0", checked: ((params[:q] && params[:q][:entire_home_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :entire_home_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :private_room_eq, "Private room" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :private_room_eq, "1", checked: ((params[:q] && params[:q][:private_room_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :private_room_eq, "0", checked: ((params[:q] && params[:q][:private_room_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :private_room_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Hostphoto Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='hostphotosgteqcreated_atPicker'>
                  <%= f.text_field :hostphotos_created_at_gteq, :class => "form-control", :placeholder => "Hostphoto Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='hostphotoslteqcreated_atPicker'>
                  <%= f.text_field :hostphotos_created_at_lteq, :class => "form-control", :placeholder => "Hostphoto Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#hostphotosgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#hostphotoslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#hostphotosgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#hostphotoslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#hostphotoslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#hostphotosgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/listings" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#listings_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Private room</th>
        <th>Entire home</th>
        <th>Description</th>
        <th>No of bedrooms</th>
        <th>No of bathrooms</th>
        <th>No of beds</th>
        <th>Max occupancy</th>
        <th>City</th>
        <th>Neighborhood</th>
        <th>Default price per night</th>
        <th>Actions</th>
      </tr>

      <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.private_room %></td>
        <td><%= listing.entire_home %></td>
        <td><%= listing.description %></td>
        <td><%= listing.no_of_bedrooms %></td>
        <td><%= listing.no_of_bathrooms %></td>
        <td><%= listing.no_of_beds %></td>
        <td><%= listing.max_occupancy %></td>
        <td><%= listing.city %></td>
        <td><%= listing.neighborhood %></td>
        <td><%= listing.default_price_per_night %></td>
        <td>
          <a href="/listings/<%= listing.id %>" class="btn btn-primary">Show</a>
          <a href="/listings/<%= listing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_listing/<%= listing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @listings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
