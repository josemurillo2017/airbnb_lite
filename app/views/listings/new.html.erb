<!-- Validation failure messages -->
<% if @listing.errors.any? %>
  <% @listing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Listing</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_listing" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @listing.title %>">
      </div>

      <!-- Label and input for private_room -->
      <div class="checkbox">
        <label for="private_room">
          <input type="checkbox" id="private_room" name="private_room" value="1" <%= "checked" if @listing.private_room %>>
          Private room
        </label>
      </div>

      <!-- Label and input for entire_home -->
      <div class="checkbox">
        <label for="entire_home">
          <input type="checkbox" id="entire_home" name="entire_home" value="1" <%= "checked" if @listing.entire_home %>>
          Entire home
        </label>
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @listing.description %>">
      </div>

      <!-- Label and input for no_of_bedrooms -->
      <div class="form-group">
        <label for="no_of_bedrooms" class="control-label">
          No of bedrooms
        </label>

        <input type="text" id="no_of_bedrooms" name="no_of_bedrooms" placeholder="No of bedrooms" class="form-control" value="<%= @listing.no_of_bedrooms %>">
      </div>

      <!-- Label and input for no_of_bathrooms -->
      <div class="form-group">
        <label for="no_of_bathrooms" class="control-label">
          No of bathrooms
        </label>

        <input type="text" id="no_of_bathrooms" name="no_of_bathrooms" placeholder="No of bathrooms" class="form-control" value="<%= @listing.no_of_bathrooms %>">
      </div>

      <!-- Label and input for no_of_beds -->
      <div class="form-group">
        <label for="no_of_beds" class="control-label">
          No of beds
        </label>

        <input type="text" id="no_of_beds" name="no_of_beds" placeholder="No of beds" class="form-control" value="<%= @listing.no_of_beds %>">
      </div>

      <!-- Label and input for max_occupancy -->
      <div class="form-group">
        <label for="max_occupancy" class="control-label">
          Max occupancy
        </label>

        <input type="text" id="max_occupancy" name="max_occupancy" placeholder="Max occupancy" class="form-control" value="<%= @listing.max_occupancy %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @listing.city %>">
      </div>

      <!-- Label and input for neighborhood -->
      <div class="form-group">
        <label for="neighborhood" class="control-label">
          Neighborhood
        </label>

        <input type="text" id="neighborhood" name="neighborhood" placeholder="Neighborhood" class="form-control" value="<%= @listing.neighborhood %>">
      </div>

      <!-- Label and input for default_price_per_night -->
      <div class="form-group">
        <label for="default_price_per_night" class="control-label">
          Default price per night
        </label>

        <input type="text" id="default_price_per_night" name="default_price_per_night" placeholder="Default price per night" class="form-control" value="<%= @listing.default_price_per_night %>">
      </div>

      <button class="btn btn-success">
        Create Listing
      </button>
      or
      <a href="/listings">Cancel</a>
    </form>
  </div>
</div>
